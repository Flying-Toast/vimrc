" Dont log viminfo
set viminfo=

" set truecolor for onedark
if (empty($TMUX))
	if (has("termguicolors"))
		set termguicolors
	endif
endif

" set onedark theme
syntax on
colorscheme onedark

" tabs are 4 columns wide
set shiftwidth=4
set tabstop=4

" show line numbers
set number

" set no line wrapping
set nowrap

" lightline stuff
set laststatus=2
set noshowmode
let g:lightline = {
  \ 'colorscheme': 'onedark',
  \ }
set showcmd

" make backspace act normally
set backspace=indent,eol,start

" use system clipboard
set clipboard+=unnamedplus

" use <Esc> to exit terminal-mode
tnoremap <Esc> <C-\><C-n>

" don't show startscreen, just edit new file when vim is opened
set shm+=I

" make `:W` do the same thing as `:w`
cnoreabbrev W w
cnoreabbrev Q q
cnoreabbrev Wq wq
cnoreabbrev Qa qa
cnoreabbrev Wqa wqa

" use <Esc> to clear search highlighting
nmap <Esc> :noh<CR>

" don't show linenumbers in :terminal mode
au TermOpen * setlocal nonumber norelativenumber

" lower updatetime so that changes appear in gitgutter faster
set updatetime=100

" always show symbol gutter, so that it doesn't 'shift' the editor when gitgutter has no symbols
set signcolumn=yes
